PORT=5000
NODE_ENV=development

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=raci
DB_USER=postgres
DB_PASSWORD=postgres

# Prisma Database URL
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# JWT Configuration
JWT_SECRET=supersecretkey_change_this_in_production
JWT_EXPIRE=24h
REFRESH_TOKEN_SECRET=supersecretrefreshkey_change_this_in_production
REFRESH_TOKEN_EXPIRE=7d

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880 # 5MB
